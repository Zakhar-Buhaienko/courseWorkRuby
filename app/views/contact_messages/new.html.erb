<h1>Зворотній зв'язок</h1>

<%= form_with(model: @contact_message, url: contact_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Імʼя' %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email, 'Email' %>
    <%= form.email_field :email, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :message, 'Повідомлення' %>
    <%= form.text_area :message, class: 'form-control', required: true %>
  </div>

  <%= form.submit 'Відправити', class: 'btn btn-primary' %>
<% end %>
