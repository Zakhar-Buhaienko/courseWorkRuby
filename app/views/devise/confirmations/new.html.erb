<div class="container mt-5">
  <h2 class="text-center" style="color: #1f196c;">Надіслати повторно інструкції підтвердження</h2>

  <div class="d-flex justify-content-center mt-4">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "w-50" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label", style: "color: #1f196c;" %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <%= f.submit "Надіслати інструкції", class: "btn", style: "border: 2px solid #6b188c; color: #6b188c; transition: all 0.3s;" %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>

<style>
  .btn:hover {
    background-color: white !important;
    color: #6b188c !important;
  }
</style>
