<div class="d-flex flex-column align-items-center mt-3">
  <% if controller_name != 'sessions' %>
    <%= link_to "Увійти", new_session_path(resource_name), class: 'btn my-2', style: 'border: 2px solid #6b188c; color: #6b188c; transition: all 0.3s;' %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Зареєструватися", new_registration_path(resource_name), class: 'btn my-2', style: 'border: 2px solid #8918db; color: #8918db; transition: all 0.3s;' %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Забули пароль?", new_password_path(resource_name), class: 'btn my-2', style: 'border: 2px solid #1f196c; color: #1f196c; transition: all 0.3s;' %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Не отримали інструкції для підтвердження?", new_confirmation_path(resource_name), class: 'btn my-2', style: 'border: 2px solid #6b188c; color: #6b188c; transition: all 0.3s;' %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Не отримали інструкції для розблокування?", new_unlock_path(resource_name), class: 'btn my-2', style: 'border: 2px solid #8918db; color: #8918db; transition: all 0.3s;' %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Увійти через #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'btn my-2', style: 'border: 2px solid #1f196c; color: #1f196c; transition: all 0.3s;' %>
    <% end %>
  <% end %>
</div>

<style>
  .btn:hover {
    background-color: white !important;
    color: inherit !important;
  }
</style>
