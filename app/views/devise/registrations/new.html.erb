<h2 class="text-center" style="color: #1f196c;">Реєстрація</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'p-4 rounded', style: 'background-color: #daf4ce;' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, "Електронна пошта", style: 'color: #1f196c;' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "Пароль", style: 'color: #1f196c;' %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">Мінімум символів: <%= @minimum_password_length %></small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Підтвердження пароля", style: 'color: #1f196c;' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="d-flex justify-content-center">
    <%= f.submit "Зареєструватися", class: 'btn', style: 'border: 2px solid #6b188c; color: #6b188c; transition: all 0.3s;' %>
  </div>
<% end %>

<div class="d-flex justify-content-center mt-3">
  <%= render "devise/shared/links" %>
</div>

<style>
  .btn:hover {
    background-color: white !important;
    color: inherit !important;
  }
</style>
