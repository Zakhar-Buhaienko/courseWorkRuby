<h1><%= @product.name %></h1>

<p><strong>Опис:</strong> <%= @product.description %></p>
<p><strong>Ціна:</strong> <%= number_to_currency(@product.price) %></p>
<p><strong>Кількість:</strong> <%= @product.stock %></p>
<%= image_tag @product.image if @product.image.attached? %>

<%= link_to 'Редагувати', edit_product_path(@product), class: 'btn btn-warning' %>
<%= link_to 'Повернутися до списку', products_path, class: 'btn btn-secondary' %>

<h2>Відгуки</h2>

<%= render @product.reviews %>

<% if user_signed_in? %>
  <h3>Залишити відгук</h3>
  <%= form_with(model: [@product, Review.new], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :rating, 'Оцінка (1-5)' %>
      <%= form.number_field :rating, in: 1..5, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :content, 'Ваш відгук' %>
      <%= form.text_area :content, class: 'form-control' %>
    </div>
    <%= form.submit 'Відправити', class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <p><%= link_to 'Увійдіть', new_user_session_path %>, щоб залишити відгук.</p>
<% end %>
